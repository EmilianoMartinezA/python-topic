# Dockerfile
FROM python:3.10-slim

# Establecer directorio de trabajo\ nWORKDIR /app

# Copiar requisitos e instalar\ nCOPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copiar c√≥digo fuente\ nCOPY . /app

# Exponer puerto\ nEXPOSE 8000

# Comando de arranque\ nCMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]